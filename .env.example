# Environment variables for the chatbot application
# Copy this file to .env and fill in your API keys

# OpenAI API configuration (preferred)
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini API configuration (alternative to OpenAI)
GOOGLE_API_KEY=your_google_api_key_here

# Streamlit configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0

# LangGraph configuration
LANGGRAPH_API_KEY=optional_langgraph_api_key

# Application settings
APP_TITLE=Zwigato Customer Support Agent
APP_DESCRIPTION=A customer support chatbot built with Streamlit, LangGraph, and OpenAI
MAX_MESSAGE_HISTORY=50

# Model configuration
MODEL=gpt-4.1
FALLBACK_MODEL=gemini-1.5-flash
PROVIDER_PREFERENCE=openai
